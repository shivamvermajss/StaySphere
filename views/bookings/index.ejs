<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
    <div class="col-10 offset-1">
        <h2 class="mb-4 fw-bold">Your Bookings</h2>

        <% if (bookings.length === 0) { %>
            <div class="alert alert-info">
                You have no bookings yet.
            </div>
        <% } %>

        <% bookings.forEach(b => { %>
            <div class="card mb-4 shadow-sm booking-card">
                <div class="row g-3">
                    
                    <!-- Image -->
                    <div class="col-md-4">
                        <img 
                            src="<%= b.listing.image.url %>" 
                            class="img-fluid rounded-start h-100"
                            style="object-fit: cover;"
                            alt="listing image"
                        >
                    </div>

                    <!-- Details -->
                    <div class="col-md-8">
                        <div class="card-body ps-4">
                            <h5 class="card-title fw-bold">
                                <%= b.listing.title %>
                            </h5>

                            <p class="text-muted mb-2">
                                <i class="bi bi-geo-alt"></i>
                                <%= b.listing.location %>, <%= b.listing.country %>
                            </p>

                            <p class="mb-2">
                                <strong>Dates:</strong><br>
                                <%= b.checkIn.toDateString() %>
                                →
                                <%= b.checkOut.toDateString() %>
                            </p>

                            <p class="mb-2">
                                <strong>Total:</strong>
                                ₹ <%= b.totalPrice.toLocaleString("en-IN") %>
                            </p>

                            <% if (b.status === "confirmed") { %>
                                <span class="badge bg-success mb-2">confirmed</span>

                                <form action="/bookings/<%= b._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-sm btn-outline-danger mt-2">
                                        Cancel Booking
                                    </button>
                                </form>
                            <% } else { %>
                                <span class="badge bg-secondary">cancelled</span>
                            <% } %>

                        </div>
                    </div>

                </div>
            </div>
        <% }) %>
    </div>
</div>
