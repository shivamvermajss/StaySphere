<% layout("/layouts/boilerplate")%>

<script>
    const mapToken = "<%= mapToken %>";
    const coordinates = <%- JSON.stringify(
        listing.geometry?.coordinates || []
    ) %>;
</script>

<div class="row mt-3">

    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url%>" class="card-img-top show-img" alt="listing_image">
        
        <div class="card-body">
            <p class="card-text"><i>owned by <%= listing.owner.username %></i></p>
            <p class="card-text"><%= listing.description %></p>

            <p class="listing-card-text">
                <b>Cost:</b>
                &#8377;
                <%= listing.price != null ? Number(listing.price).toLocaleString("en-IN") : "N/A" %>
            </p>

            <p class="card-text"><%= listing.location %></p> 
            <p class="card-text"><%= listing.country %></p>
        </div>
    </div>
</div>

<br>

<% if(currUser && currUser._id.equals(listing.owner._id)) { %>
<div class="btns col-6 offset-3 mt-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">
        Edit
    </a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark" type="submit">
            Delete
        </button>
    </form>
</div>
<% } %>

<% if (currUser && !currUser._id.equals(listing.owner._id)) { %>
<div class="row mt-4">
    <div class="col-6 offset-3">
        <div class="card p-3">
            <h5 class="mb-3">Book this place</h5>

            <form action="/listings/<%= listing._id %>/book" method="POST">
                <div class="mb-2">
                    <label class="form-label">Check In</label>
                    <input type="date" name="checkIn" class="form-control" required>
                </div>

                <div class="mb-2">
                    <label class="form-label">Check Out</label>
                    <input type="date" name="checkOut" class="form-control" required>
                </div>

                <button class="btn btn-success w-100 mt-2">
                    Reserve
                </button>
            </form>
        </div>
    </div>
</div>
<% } %>

<% if (!currUser) { %>
<div class="row mt-4">
    <div class="col-6 offset-3 text-center">
        <a href="/login" class="btn btn-outline-primary">
            Login to Book
        </a>
    </div>
</div>
<% } %>

<div class="col-8 offset-3 mb-3">

    <% if(currUser) { %>
    <hr>    
    <h4>Leave a Review</h4>

    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
            <label class="form-label">Rating</label>
            <fieldset class="starability-slot">
                <input type="radio" name="review[rating]" value="1" />
                <input type="radio" name="review[rating]" value="2" />
                <input type="radio" name="review[rating]" value="3" />
                <input type="radio" name="review[rating]" value="4" />
                <input type="radio" name="review[rating]" value="5" />
            </fieldset>
        </div>

        <div class="mb-3 mt-3">
            <label class="form-label">Comments</label>
            <textarea name="review[comment]" class="form-control" rows="5" required></textarea>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>

    <hr>

    <% if(listing.reviews.length > 0){ %>
    <div class="row">
        <p><b>All Reviews</b></p>

        <% for(let review of listing.reviews){ %>
        <div class="card col-5 mb-3 ms-3">
            <div class="card-body">
                <h5 class="card-title"><%= review.author.username %></h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="starability-result" data-rating="<%= review.rating %>">
                    Rated: <%= review.rating %>
                </p>
            </div>

            <form method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-dark btn-sm mb-3 ms-3">
                    Delete Review
                </button>
            </form>
        </div>
        <% } %>
    </div>
    <% } %>
</div>

<div class="col-8 offset-3 mb-3">
    <h3>Where you will be</h3>
    <div id="map"></div>
</div>

<script src="/js/map.js"></script>
